<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <!-- 点击区域，用于显示/隐藏控制面板 -->
    <View
        android:id="@+id/clickArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent" />

    <!-- 顶部信息栏 -->
    <LinearLayout
        android:id="@+id/topInfoPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:visibility="visible">

        <!-- 实际内容区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@android:color/transparent"
            android:padding="12dp">

            <!-- 返回按钮 -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/arrow_left"
                android:tint="#FFFFFF"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginEnd="8dp" />

            <!-- 左侧区域：标题（占2/3宽度） -->
            <TextView
                android:id="@+id/tvFileName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="视频文件名"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingMultiplier="0.85" />

            <!-- 右侧区域：状态+按钮（占1/3宽度，预留导航栏空间） -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="end|center_vertical"
                android:layout_marginEnd="60dp">

                <!-- 电量和时间显示（向左移动，给字幕按钮留空间） -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:id="@+id/tvBattery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:textColor="#FFFFFF"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:00"
                        android:textColor="#FFFFFF"
                        android:textSize="11sp"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <!-- 字幕按钮（新增） -->
                <ImageView
                    android:id="@+id/btnSubtitle"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_subtitle"
                    android:tint="#FFFFFF"
                    android:padding="6dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="4dp" />

                <!-- 音轨选择按钮 -->
                <ImageView
                    android:id="@+id/btnAudioTrack"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/music_alt"
                    android:tint="#FFFFFF"
                    android:padding="6dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="4dp" />

                <!-- 解码器切换按钮 -->
                <ImageView
                    android:id="@+id/btnDecoder"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/key"
                    android:tint="#FFFFFF"
                    android:padding="6dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="6dp" />

                <!-- 更多选项按钮 -->
                <ImageView
                    android:id="@+id/btnMore"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/menudotsvertical"
                    android:tint="#FFFFFF"
                    android:padding="6dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="6dp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <!-- 播放控制面板 -->
    <LinearLayout
        android:id="@+id/controlPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:visibility="visible">

        <!-- 进度条和控制按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:padding="16dp">

            <!-- 进度条区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxWidth="800dp"
                    android:orientation="vertical">

                    <!-- 时间显示（在进度条上方） -->
                    <TextView
                        android:id="@+id/tvTimeInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00/00:00"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:background="@android:color/transparent"
                        android:layout_marginBottom="4dp" />

                    <!-- 进度条 -->
                    <SeekBar
                        android:id="@+id/seekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/seekbar_progress"
                        android:thumb="@drawable/seekbar_thumb"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:thumbOffset="0dp"
                        android:splitTrack="false"
                        android:maxHeight="3dp"
                        android:minHeight="3dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- 控制按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <!-- Anime4K按钮（超分辨率）- 固定在左侧 -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAnime4K"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:minWidth="80dp"
                    android:text="超分辨率"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:background="@drawable/btn_anime4k_bg"
                    android:elevation="2dp"
                    android:layout_marginStart="48dp" />

                <!-- 固定宽度间隔 - 减小宽度 -->
                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp" />

                <!-- 左侧弹簧 -->
                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- 上一集按钮 -->
                <ImageView
                    android:id="@+id/btnPrevious"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/previous_square"
                    android:tint="#FFFFFF"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="-60dp"
                    android:enabled="false"
                    android:alpha="0.5" />

                <!-- 后退按钮 -->
                <ImageView
                    android:id="@+id/btnRewind"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/rewind"
                    android:tint="#FFFFFF"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginEnd="12dp" />

                <!-- 播放按钮（中间） -->
                <ImageView
                    android:id="@+id/btnPlayPause"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/pause"
                    android:tint="#FFFFFF"
                    android:padding="6dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp" />

                <!-- 前进按钮 -->
                <ImageView
                    android:id="@+id/btnForward"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/forward"
                    android:tint="#FFFFFF"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="12dp" />

                <!-- 下一集按钮 -->
                <ImageView
                    android:id="@+id/btnNext"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/next_square"
                    android:tint="#FFFFFF"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="12dp"
                    android:enabled="false"
                    android:alpha="0.5" />

                <!-- 倍速按钮 -->
                <ImageView
                    android:id="@+id/btnSpeed"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/tachometer_alt_fastest"
                    android:tint="#FFFFFF"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="12dp" />

                <!-- 右侧弹簧 -->
                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!-- 恢复播放提示 -->
    <LinearLayout
        android:id="@+id/resumePlaybackPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:background="#66000000"
        android:orientation="horizontal"
        android:padding="16dp"
        android:elevation="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvResumeMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已为您恢复上次播放进度，是否从头播放？ "
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvResumeConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textColor="@color/primary"
            android:textSize="15sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- 亮度指示器（右侧显示，左侧滑动控制） -->
    <LinearLayout
        android:id="@+id/brightnessIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:background="@drawable/indicator_card_background"
        android:paddingHorizontal="12dp"
        android:paddingVertical="16dp">

        <!-- 亮度图标 -->
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_brightness"
            android:tint="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <!-- 亮度数值（1-10） -->
        <TextView
            android:id="@+id/brightnessText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- 背景容器 -->
        <FrameLayout
            android:layout_width="5dp"
            android:layout_height="120dp"
            android:background="@drawable/progress_track_background">

            <!-- 亮度条 -->
            <View
                android:id="@+id/brightnessBar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:background="@drawable/brightness_gradient" />

        </FrameLayout>

    </LinearLayout>

    <!-- 音量指示器（左侧显示，右侧滑动控制） -->
    <LinearLayout
        android:id="@+id/volumeIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:background="@drawable/indicator_card_background"
        android:paddingHorizontal="12dp"
        android:paddingVertical="16dp">

        <!-- 音量图标 -->
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_volume"
            android:tint="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <!-- 音量数值（1-10） -->
        <TextView
            android:id="@+id/volumeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- 背景容器 -->
        <FrameLayout
            android:layout_width="5dp"
            android:layout_height="120dp"
            android:background="@drawable/progress_track_background">

            <!-- 音量条 -->
            <View
                android:id="@+id/volumeBar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:background="@drawable/volume_gradient" />

        </FrameLayout>

    </LinearLayout>

    <!-- 进度调整提示（屏幕中央）- 优化为圆角背景 -->
    <TextView
        android:id="@+id/seekHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/speed_hint_background"
        android:paddingHorizontal="28dp"
        android:paddingVertical="18dp"
        android:text="08:17\n[+00:12]"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:visibility="gone"
        android:elevation="10dp"
        android:alpha="0" />

    <!-- 倍速播放提示（屏幕中央） -->
    <LinearLayout
        android:id="@+id/speedHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/speed_hint_background"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        android:gravity="center"
        android:visibility="gone"
        android:elevation="10dp"
        android:alpha="0">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_fast_forward"
            android:tint="#FFFFFF"
            android:layout_marginEnd="6dp" />

        <TextView
            android:id="@+id/speedHintText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在2倍速播放"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- 进度恢复提示框（左下角，横向布局） -->
    <LinearLayout
        android:id="@+id/resumeProgressPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="100dp"
        android:orientation="horizontal"
        android:background="@drawable/resume_prompt_background"
        android:paddingVertical="6dp"
        android:paddingHorizontal="10dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:elevation="8dp">

        <!-- 关闭按钮 (X) -->
        <TextView
            android:id="@+id/btnResumePromptClose"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:text="✕"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@drawable/resume_close_button_background"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="8dp" />

        <!-- 提示文字 -->
        <TextView
            android:id="@+id/tvResumePromptText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="从上次停止的位置继续"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginEnd="10dp" />

        <!-- 重新开始按钮 -->
        <TextView
            android:id="@+id/btnResumePromptConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重新开始"
            android:textColor="@color/primary"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingHorizontal="8dp"
            android:paddingVertical="3dp"
            android:background="@drawable/resume_button_background"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- 截图状态指示器 -->
    <include
        layout="@layout/view_screenshot_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:visibility="gone" />

</RelativeLayout>
