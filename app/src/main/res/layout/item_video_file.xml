<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- 视频缩略图 -->
        <androidx.cardview.widget.CardView
            android:layout_width="96dp"
            android:layout_height="54dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp">
            
            <ImageView
                android:id="@+id/ivThumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@android:drawable/ic_media_play"
                android:scaleType="centerCrop"
                android:background="#E0E0E0"
                android:contentDescription="视频缩略图" />
                
        </androidx.cardview.widget.CardView>

        <!-- 视频信息 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvVideoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频文件名.mp4"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:maxLines="2"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvVideoDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:24:35"
                    android:textSize="12sp"
                    android:textColor="#999999" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • "
                    android:textSize="12sp"
                    android:textColor="#999999" />

                <TextView
                    android:id="@+id/tvVideoSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="234.5 MB"
                    android:textSize="12sp"
                    android:textColor="#999999" />

            </LinearLayout>

        </LinearLayout>

        <!-- 右侧：更多菜单按钮（新增） -->
        <ImageView
            android:id="@+id/btnMoreInfo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/menudotsvertical"
            android:tint="#999999"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginStart="4dp"
            android:contentDescription="更多信息" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
