<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- 顶部标题栏 -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_topbar_gradient"
        android:padding="8dp"
        android:elevation="4dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/angle_small_left"
            android:tint="#FFFFFF"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/tvFolderTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="视频列表"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/tvVideoCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 个视频"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:alpha="0.85"
            android:layout_marginEnd="8dp" />

    </LinearLayout>

    <!-- 搜索框（现代化设计） -->
    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:elevation="2dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/bg_search_modern"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="12dp">

            <!-- 搜索图标 -->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/search"
                android:tint="#999999"
                android:layout_marginEnd="12dp" />

            <!-- 搜索输入框 -->
            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="搜索视频..."
                android:textSize="15sp"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:background="@android:color/transparent"
                android:maxLines="1"
                android:imeOptions="actionSearch"
                android:inputType="text" />

            <!-- 清除按钮 -->
            <ImageView
                android:id="@+id/btnClearSearch"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/exit"
                android:tint="#666666"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:visibility="gone"
                android:contentDescription="清除搜索" />

        </LinearLayout>

    </LinearLayout>

    <!-- 视频列表（添加下拉刷新） -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchBar">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvVideoList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- 悬浮排序按钮 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSort"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="排序"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_button_rounded"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:minWidth="100dp"
        android:elevation="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp" />

</RelativeLayout>
