<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- 顶部标题栏 -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_topbar_gradient"
        android:padding="8dp"
        android:elevation="4dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/angle_small_left"
            android:tint="#FFFFFF"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/tvFolderTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="视频列表"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <ImageView
            android:id="@+id/btnSort"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_sort_button"
            android:tint="#FFFFFF"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="排序" />

        <ImageView
            android:id="@+id/btnSearch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_search_button"
            android:tint="#FFFFFF"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="搜索"
            android:layout_marginEnd="4dp" />

    </LinearLayout>

    <!-- 搜索栏覆盖层（初始隐藏） -->
    <LinearLayout
        android:id="@+id/searchOverlay"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:background="@drawable/bg_topbar_gradient"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:elevation="5dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <!-- 搜索输入框 -->
        <EditText
            android:id="@+id/etSearchOverlay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="搜索视频..."
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCFFFFFF"
            android:background="@android:color/transparent"
            android:maxLines="1"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:paddingStart="0dp"
            android:paddingEnd="0dp" />

        <!-- 清除按钮 -->
        <ImageView
            android:id="@+id/btnClearSearchOverlay"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/exit"
            android:tint="#FFFFFF"
            android:padding="6dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
            android:contentDescription="清除搜索" />

    </LinearLayout>

