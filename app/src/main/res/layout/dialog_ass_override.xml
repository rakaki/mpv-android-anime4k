<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_subtitle"
    android:padding="24dp">

    <!-- 标题 -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="字体设置"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- 说明文本 -->
    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="是否覆盖 ASS/SSA 字幕的原始样式？"
        android:textSize="14sp"
        android:textColor="?attr/colorSubtitleLabelText"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="24dp" />

    <!-- 按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- 否 按钮 -->
        <Button
            android:id="@+id/btnNo"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="否"
            android:textSize="15sp"
            android:textColor="?attr/colorButtonText"
            android:background="@drawable/bg_dialog_rounded"
            android:layout_marginEnd="8dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:stateListAnimator="@null" />

        <!-- 是 按钮 -->
        <Button
            android:id="@+id/btnYes"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="是（推荐）"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_confirm_button"
            android:layout_marginStart="8dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:stateListAnimator="@null" />

    </LinearLayout>

</LinearLayout>
