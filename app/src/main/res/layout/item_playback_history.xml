<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- 左侧信息 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- 文件名 -->
            <TextView
                android:id="@+id/tvHistoryFileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频文件名.mp4"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- 文件夹 -->
            <TextView
                android:id="@+id/tvHistoryFolderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="文件夹名称"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginTop="4dp" />

            <!-- 播放时间 -->
            <TextView
                android:id="@+id/tvHistoryPlayTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024-01-01 12:00"
                android:textSize="11sp"
                android:textColor="#BBBBBB"
                android:layout_marginTop="2dp" />

            <!-- 播放进度 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <ProgressBar
                    android:id="@+id/progressHistory"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/progress_track_background" />

                <TextView
                    android:id="@+id/tvHistoryProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50%"
                    android:textSize="11sp"
                    android:textColor="@color/primary"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- 删除按钮 -->
        <ImageView
            android:id="@+id/btnDeleteHistory"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_delete"
            android:tint="#999999"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
