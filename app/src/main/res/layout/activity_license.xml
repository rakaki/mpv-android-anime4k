<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:title="许可证书"
        app:titleTextColor="@color/text_white"
        app:navigationIcon="@drawable/ic_back_scaled" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 说明文字 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="本软件使用以下开源组件,感谢开源社区的贡献。点击查看详细许可证内容。"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:padding="8dp"
                android:layout_marginBottom="8dp" />

            <!-- MPV Player -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMpv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MPV Player"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GPL-2.0 License"
                        android:textSize="12sp"
                        android:textColor="@color/text_hint"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="https://mpv.io/"
                        android:textSize="12sp"
                        android:textColor="?attr/colorPrimary"
                        android:layout_marginTop="4dp"
                        android:autoLink="web" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Anime4K -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAnime4k"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Anime4K"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MIT License"
                        android:textSize="12sp"
                        android:textColor="@color/text_hint"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="https://github.com/bloc97/Anime4K"
                        android:textSize="12sp"
                        android:textColor="?attr/colorPrimary"
                        android:layout_marginTop="4dp"
                        android:autoLink="web" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- DanmakuFlameMaster -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardDanmaku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DanmakuFlameMaster"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Apache License 2.0"
                        android:textSize="12sp"
                        android:textColor="@color/text_hint"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="https://github.com/bilibili/DanmakuFlameMaster"
                        android:textSize="12sp"
                        android:textColor="?attr/colorPrimary"
                        android:layout_marginTop="4dp"
                        android:autoLink="web" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Glide -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardGlide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Glide"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BSD, Apache License 2.0"
                        android:textSize="12sp"
                        android:textColor="@color/text_hint"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="https://github.com/bumptech/glide"
                        android:textSize="12sp"
                        android:textColor="?attr/colorPrimary"
                        android:layout_marginTop="4dp"
                        android:autoLink="web" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- AndroidX & Material -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAndroidX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="AndroidX Libraries &amp; Material Components"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Apache License 2.0"
                        android:textSize="12sp"
                        android:textColor="@color/text_hint"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="https://developer.android.com/jetpack/androidx"
                        android:textSize="12sp"
                        android:textColor="?attr/colorPrimary"
                        android:layout_marginTop="4dp"
                        android:autoLink="web" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Kotlin -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardKotlin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kotlin &amp; Kotlinx Coroutines"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Apache License 2.0"
                        android:textSize="12sp"
                        android:textColor="@color/text_hint"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="https://kotlinlang.org/"
                        android:textSize="12sp"
                        android:textColor="?attr/colorPrimary"
                        android:layout_marginTop="4dp"
                        android:autoLink="web" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- mpv-android -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMpvAndroid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="mpv-android"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MIT License"
                        android:textSize="12sp"
                        android:textColor="@color/text_hint"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="https://github.com/mpv-android/mpv-android"
                        android:textSize="12sp"
                        android:textColor="?attr/colorPrimary"
                        android:layout_marginTop="4dp"
                        android:autoLink="web" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- mpvKt -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMpvKt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="mpvKt"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Apache License 2.0"
                        android:textSize="12sp"
                        android:textColor="@color/text_hint"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="https://github.com/abdallahmehiz/mpvKt"
                        android:textSize="12sp"
                        android:textColor="?attr/colorPrimary"
                        android:layout_marginTop="4dp"
                        android:autoLink="web" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- DanDanPlayForAndroid -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardDanDanPlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DanDanPlayForAndroid"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Apache License 2.0"
                        android:textSize="12sp"
                        android:textColor="@color/text_hint"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="https://github.com/xyoye/DanDanPlayForAndroid"
                        android:textSize="12sp"
                        android:textColor="?attr/colorPrimary"
                        android:layout_marginTop="4dp"
                        android:autoLink="web" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 底部留白 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
