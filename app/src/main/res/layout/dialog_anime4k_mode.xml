<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_modern"
    android:padding="0dp"
    android:minWidth="240dp">

    <!-- 标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_dialog_header"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anime4K 超分辨率"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择画质增强模式"
            android:textSize="10sp"
            android:textColor="#B3FFFFFF"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- 模式列表（垂直滚动，固定显示3个项目的高度） -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:fillViewport="false"
        android:overScrollMode="never"
        android:scrollbars="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAnime4KMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:clipToPadding="false" />

    </androidx.core.widget.NestedScrollView>

    <!-- 滑动提示 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="↑ 上下滑动查看更多模式 ↓"
        android:textSize="9sp"
        android:textColor="#9CA3AF"
        android:gravity="center"
        android:padding="6dp"
        android:background="#F3F4F6" />

    <!-- 关闭按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAnime4KClose"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="关闭"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_button_close"
            android:elevation="2dp" />

    </LinearLayout>

</LinearLayout>
