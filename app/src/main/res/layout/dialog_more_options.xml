<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="更多选项"
        android:textSize="16sp"
        android:textColor="#E0E0E0"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/btnChapters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/dialog_item_selector"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/rectanglelist"
            android:tint="#F5F5F5"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="章节"
            android:textSize="15sp"
            android:textColor="#F5F5F5"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnScreenshot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/dialog_item_selector"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/scissors"
            android:tint="#F5F5F5"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="截图"
            android:textSize="15sp"
            android:textColor="#F5F5F5"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnCancelMore"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:text="取消"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/dialog_cancel_button"
        android:layout_marginTop="16dp"
        android:textStyle="bold"/>

</LinearLayout>
