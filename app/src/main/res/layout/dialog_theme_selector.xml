<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_theme_dialog"
    android:padding="20dp">

    <!-- 标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择主题"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?attr/colorDialogText"
        android:paddingBottom="16dp" />

    <!-- 主题列表 -->
    <RadioGroup
        android:id="@+id/radioGroupTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 蓝紫主题 -->
        <RadioButton
            android:id="@+id/radioThemeBluePurple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="蓝紫主题（默认）"
            android:textSize="16sp"
            android:textColor="?attr/colorDialogText"
            android:padding="12dp"
            android:buttonTint="@color/primary" />

        <!-- 绿色主题 -->
        <RadioButton
            android:id="@+id/radioThemeGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="绿色主题"
            android:textSize="16sp"
            android:textColor="?attr/colorDialogText"
            android:padding="12dp"
            android:buttonTint="@color/green_primary" />

        <!-- 橙色主题 -->
        <RadioButton
            android:id="@+id/radioThemeOrange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="橙色主题"
            android:textSize="16sp"
            android:textColor="?attr/colorDialogText"
            android:padding="12dp"
            android:buttonTint="@color/orange_primary" />

        <!-- 粉色主题 -->
        <RadioButton
            android:id="@+id/radioThemePink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="粉色主题"
            android:textSize="16sp"
            android:textColor="?attr/colorDialogText"
            android:padding="12dp"
            android:buttonTint="@color/pink_primary" />

        <!-- 靛蓝主题 -->
        <RadioButton
            android:id="@+id/radioThemeIndigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="靛蓝主题"
            android:textSize="16sp"
            android:textColor="?attr/colorDialogText"
            android:padding="12dp"
            android:buttonTint="@color/indigo_primary" />

    </RadioGroup>

    <!-- 按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="?attr/colorDialogText"
            android:background="?attr/selectableItemBackground"
            android:paddingHorizontal="24dp" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textColor="?attr/colorButtonPrimary"
            android:background="?attr/selectableItemBackground"
            android:paddingHorizontal="24dp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>
