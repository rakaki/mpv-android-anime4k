<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_modern"
    android:padding="16dp"
    android:minWidth="280dp">

    <!-- 标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="字幕大小"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="10dp" />

    <!-- 当前值显示 -->
    <TextView
        android:id="@+id/tvCurrentSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="正常 (1.0)"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#5B7FFF"
        android:gravity="center"
        android:layout_marginBottom="12dp" />

    <!-- 刻度标签 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="6dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.5"
            android:textSize="10sp"
            android:textColor="#999999"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.7"
            android:textSize="10sp"
            android:textColor="#999999"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.8"
            android:textSize="10sp"
            android:textColor="#999999"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1.0"
            android:textSize="10sp"
            android:textColor="#999999"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1.2"
            android:textSize="10sp"
            android:textColor="#999999"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1.5"
            android:textSize="10sp"
            android:textColor="#999999"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2.0"
            android:textSize="10sp"
            android:textColor="#999999"
            android:gravity="center" />

    </LinearLayout>

    <!-- 滑块容器 - 添加圆角背景 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_rounded"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginBottom="6dp">

        <SeekBar
            android:id="@+id/seekBarSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="6"
            android:progress="3"
            android:progressTint="#5B7FFF"
            android:progressBackgroundTint="#E0E0E0"
            android:thumbTint="#5B7FFF" />

    </FrameLayout>

    <!-- 说明文字标签 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="14dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="极小"
            android:textSize="9sp"
            android:textColor="#666666"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="较小"
            android:textSize="9sp"
            android:textColor="#666666"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="小"
            android:textSize="9sp"
            android:textColor="#666666"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="正常"
            android:textSize="9sp"
            android:textColor="#666666"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="大"
            android:textSize="9sp"
            android:textColor="#666666"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="较大"
            android:textSize="9sp"
            android:textColor="#666666"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="极大"
            android:textSize="9sp"
            android:textColor="#666666"
            android:gravity="center" />

    </LinearLayout>

    <!-- 底部按钮组 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- 重置按钮 -->
        <Button
            android:id="@+id/btnResetSize"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:text="重置"
            android:textSize="13sp"
            android:textColor="#999999"
            android:background="@drawable/bg_dialog_rounded"
            android:gravity="center"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:layout_marginEnd="6dp" />

        <!-- 取消按钮 -->
        <Button
            android:id="@+id/btnCancelSize"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:text="取消"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_confirm_button"
            android:gravity="center"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:layout_marginEnd="6dp" />

        <!-- 确认按钮 -->
        <Button
            android:id="@+id/btnConfirmSize"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:text="确认"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_confirm_button"
            android:gravity="center"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp" />

    </LinearLayout>

</LinearLayout>
