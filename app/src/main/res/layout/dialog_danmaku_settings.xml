<?xml version="1.0" encoding="utf-8"?>
<!-- 
    弹幕样式设置对话框
    样式与字幕杂项对话框保持一致
    包含可滚动区域和固定的重置按钮
-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_dialog_subtitle"
        android:padding="16dp">

        <!-- 可滚动区域 - 最多显示3项 -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxHeight="420dp"
            android:fillViewport="false"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 弹幕大小区域 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="弹幕大小"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="start"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/tvDanmakuSizeValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50%"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp"
                            android:textColor="?attr/colorPrimary" />

                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/seekBarDanmakuSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="50"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp" />

                </LinearLayout>

                <!-- 弹幕速度区域 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="弹幕速度"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="start"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/tvDanmakuSpeedValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50%"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp"
                            android:textColor="?attr/colorPrimary" />

                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/seekBarDanmakuSpeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="50"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp" />

                </LinearLayout>

                <!-- 弹幕透明度区域 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="弹幕透明度"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="start"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/tvDanmakuAlphaValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100%"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp"
                            android:textColor="?attr/colorPrimary" />

                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/seekBarDanmakuAlpha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="100"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp" />

                </LinearLayout>

                <!-- 弹幕描边粗细区域 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="描边粗细"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="start"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/tvDanmakuStrokeValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50%"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp"
                            android:textColor="?attr/colorPrimary" />

                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/seekBarDanmakuStroke"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="50"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <!-- 重置按钮区域（固定在底部）-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnResetDanmaku"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="重置"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_reset_button"
                android:enabled="false"
                android:stateListAnimator="@null"
                android:minWidth="0dp"
                android:minHeight="0dp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
