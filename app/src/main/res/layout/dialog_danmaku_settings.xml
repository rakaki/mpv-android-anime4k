<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- 弹幕大小 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="弹幕大小"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <SeekBar
            android:id="@+id/seekBarDanmakuSize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100"
            android:progress="50" />

        <TextView
            android:id="@+id/tvDanmakuSizeValue"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="50%"
            android:textSize="14sp"
            android:gravity="end"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- 弹幕速度 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="弹幕速度"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <SeekBar
            android:id="@+id/seekBarDanmakuSpeed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100"
            android:progress="50" />

        <TextView
            android:id="@+id/tvDanmakuSpeedValue"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="50%"
            android:textSize="14sp"
            android:gravity="end"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- 弹幕透明度 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="弹幕透明度"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <SeekBar
            android:id="@+id/seekBarDanmakuAlpha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100"
            android:progress="100" />

        <TextView
            android:id="@+id/tvDanmakuAlphaValue"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="100%"
            android:textSize="14sp"
            android:gravity="end"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- 弹幕描边 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="弹幕描边"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <SeekBar
            android:id="@+id/seekBarDanmakuStroke"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100"
            android:progress="50" />

        <TextView
            android:id="@+id/tvDanmakuStrokeValue"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="50%"
            android:textSize="14sp"
            android:gravity="end"
            android:layout_marginStart="12dp" />
    </LinearLayout>

</LinearLayout>
