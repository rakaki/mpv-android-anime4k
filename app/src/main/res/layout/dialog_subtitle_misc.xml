<?xml version="1.0" encoding="utf-8"?>
<!-- 
    字幕杂项设置对话框
    宽度: 横屏状态下的1/2.5 (通过Java代码动态设置)
    高度: wrap_content，避免遮挡顶部和底部控制
    UI风格: 跟随主题
-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_dialog_subtitle"
        android:padding="16dp">

        <!-- 字幕大小区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <!-- 字幕大小标签和实时值 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvSizeLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="字幕大小"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:textColor="?attr/colorSubtitleLabelText" />

                <TextView
                    android:id="@+id/tvSizeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.0"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:textColor="?attr/colorPrimary" />

            </LinearLayout>

            <!-- 字幕大小 SeekBar -->
            <SeekBar
                android:id="@+id/seekBarSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="50"
                android:progress="10"
                android:paddingStart="0dp"
                android:paddingEnd="0dp" />

        </LinearLayout>

        <!-- 字幕位置区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- 字幕位置标签和实时值 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvPositionLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="字幕位置"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:textColor="?attr/colorSubtitleLabelText" />

                <TextView
                    android:id="@+id/tvPositionValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:textColor="?attr/colorPrimary" />

            </LinearLayout>

            <!-- 字幕位置 SeekBar -->
            <SeekBar
                android:id="@+id/seekBarPosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="150"
                android:progress="100"
                android:paddingStart="0dp"
                android:paddingEnd="0dp" />

        </LinearLayout>

        <!-- 重置按钮区域（仅在值改变时可用）-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnReset"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="重置"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_reset_button"
                android:enabled="false"
                android:stateListAnimator="@null"
                android:minWidth="0dp"
                android:minHeight="0dp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
