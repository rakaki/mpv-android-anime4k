<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_rounded_background">

    <!-- 标题栏 -->
    <LinearLayout
        android:id="@+id/llDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/dialog_title_background"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="快进/快退时长"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_light" />

    <!-- 选项列表 -->
    <RadioGroup
        android:id="@+id/rgSeekTimeOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb3s"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="3 秒"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="@drawable/radio_button_background"
            android:button="@null" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_light" />

        <RadioButton
            android:id="@+id/rb5s"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="5 秒"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="@drawable/radio_button_background"
            android:button="@null" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_light" />

        <RadioButton
            android:id="@+id/rb10s"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="10 秒"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="@drawable/radio_button_background"
            android:button="@null" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_light" />

        <RadioButton
            android:id="@+id/rb15s"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="15 秒"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="@drawable/radio_button_background"
            android:button="@null" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_light" />

        <RadioButton
            android:id="@+id/rb20s"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="20 秒"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="@drawable/radio_button_background"
            android:button="@null" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_light" />

        <RadioButton
            android:id="@+id/rb25s"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="25 秒"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="@drawable/radio_button_background"
            android:button="@null" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_light" />

        <RadioButton
            android:id="@+id/rb30s"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="30 秒"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="@drawable/radio_button_background"
            android:button="@null" />
    </RadioGroup>

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_light" />

    <!-- 按钮栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="取消"
            android:background="@drawable/button_cancel_background"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="确定"
            android:background="@drawable/button_confirm_background"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp" />
    </LinearLayout>
</LinearLayout>
