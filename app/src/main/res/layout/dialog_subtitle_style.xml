                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:text="B"
                            android:textSize="12sp"
                            android:textColor="#6666FF"
                            android:textStyle="bold" />

                        <SeekBar
                            android:id="@+id/seekBarBackB"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="255" />

                        <TextView
                            android:id="@+id/tvBackBValue"
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:gravity="end" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:text="A"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold" />

                        <SeekBar
                            android:id="@+id/seekBarBackA"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="255" />

                        <TextView
                            android:id="@+id/tvBackAValue"
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:gravity="end" />
                    </LinearLayout>
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:text="A"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold" />

                        <SeekBar
                            android:id="@+id/seekBarBackA"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="255" />

                        <TextView
                            android:id="@+id/tvBackAValue"
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:gravity="end" />
                    </LinearLayout>
                </LinearLayout>

            <!-- 描边样式 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="描边样式"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="背景颜色需选择&quot;背景盒子&quot;才能显示"
                    android:textSize="11sp"
                    android:textColor="#AAAAAA" />

                <RadioGroup
                    android:id="@+id/rgBorderStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rbOutlineAndShadow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="轮廓+阴影"
                        android:textSize="13sp"
                        android:textColor="#FFFFFF"
                        android:checked="true"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp" />

                    <RadioButton
                        android:id="@+id/rbOpaqueBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="不透明背景盒子"
                        android:textSize="13sp"
                        android:textColor="#FFFFFF"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp" />

                    <RadioButton
                        android:id="@+id/rbBackgroundBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="半透明背景盒子"
                        android:textSize="13sp"
                        android:textColor="#FFFFFF"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp" />
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:background="?android:attr/textColorSecondary"
        android:alpha="0.2" />

    <!-- 重置按钮区域 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:text="上方区域可上下滑动"
            android:textSize="12sp"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="重置"
            android:textSize="14sp"
            android:enabled="false" />
    </FrameLayout>

</LinearLayout>