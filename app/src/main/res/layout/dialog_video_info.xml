<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_modern"
    android:padding="20dp">

    <!-- 标题 -->
    <TextView
        android:id="@+id/tvInfoFileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="视频文件名.mp4"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginBottom="16dp" />

    <!-- 加载进度条 -->
    <ProgressBar
        android:id="@+id/progressLoadingInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="visible" />

    <!-- 视频信息 -->
    <LinearLayout
        android:id="@+id/layoutVideoInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- 分辨率 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="分辨率："
                android:textSize="14sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tvInfoResolution"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1920x1080"
                android:textSize="14sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:gravity="end" />

        </LinearLayout>

        <!-- 编码 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="视频/音频："
                android:textSize="14sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tvInfoCodec"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="H.264 / AAC"
                android:textSize="14sp"
                android:textColor="#333333"
                android:gravity="end" />

        </LinearLayout>

        <!-- 比特率 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="比特率："
                android:textSize="14sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tvInfoBitrate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5.2 Mbps"
                android:textSize="14sp"
                android:textColor="#333333"
                android:gravity="end" />

        </LinearLayout>

        <!-- 帧率 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="帧率："
                android:textSize="14sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tvInfoFrameRate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="24 fps"
                android:textSize="14sp"
                android:textColor="#333333"
                android:gravity="end" />

        </LinearLayout>

    </LinearLayout>

    <!-- 关闭按钮 -->
    <Button
        android:id="@+id/btnCloseInfo"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="确定"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_confirm_button"
        android:layout_marginTop="8dp" />

</LinearLayout>
