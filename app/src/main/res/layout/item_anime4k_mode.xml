<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardAnime4KMode"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="#F9FAFB"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:clipChildren="true"
        android:clipToPadding="true">

        <!-- 左侧图标 -->
        <TextView
            android:id="@+id/tvModeIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/bg_mode_icon" />

        <!-- 中间信息 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <!-- 模式名称 -->
            <TextView
                android:id="@+id/tvModeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#111827"
                android:textStyle="bold" />

            <!-- 模式描述 -->
            <TextView
                android:id="@+id/tvModeDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#6B7280"
                android:layout_marginTop="2dp"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- 右侧选中图标 -->
        <ImageView
            android:id="@+id/ivModeSelected"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_check_circle"
            android:tint="#8B5CF6"
            android:visibility="gone"
            android:layout_marginStart="6dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
