<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="?attr/colorDialogItemBgPressed"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="?attr/colorDialogItemBgSelected"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="?attr/colorDialogItemBg"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
</selector>
